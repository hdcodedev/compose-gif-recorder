root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
ktlint_function_naming_ignore_when_annotated_with = Composable

[**/generated/**]
ktlint_rule_execution = disabled
ktlint_standard = disabled
ktlint_experimental = disabled

[**/build/**]
ktlint_rule_execution = disabled
ktlint_standard = disabled
ktlint_experimental = disabled
